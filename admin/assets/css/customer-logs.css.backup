#rental-history-table thead {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
}

#rental-history-table thead th {
    padding: 1.2rem 1rem;
    text-align: left;
    font-weight: 600;
    color: white;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.85rem;
    border: none;
    position: relative;
}

#rental-history-table thead th:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 20px;
    background: rgba(255, 255, 255, 0.2);
}

#rental-history-table tbody tr {
    transition: all 0.3s ease;
    border-bottom: 1px solid #f0f0f0;
}

#rental-history-table tbody tr:hover {
    background: linear-gradient(135deg, rgba(255, 105, 180, 0.05), rgba(255, 182, 193, 0.05));
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(255, 105, 180, 0.1);
}

#rental-history-table tbody tr:last-child {
    border-bottom: none;
}

#rental-history-table tbody td {
    padding: 1rem;
    vertical-align: middle;
    color: var(--text-color);
    border: none;
}

/* === STATUS BADGES === */
.status-badge {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    margin: 0;
}

.status-upcoming {
    background: linear-gradient(135deg, #fff3cd, #ffeaa7);
    color: #856404;
    border: 1px solid #ffeaa7;
}

.status-ongoing {
    background: linear-gradient(135deg, #d4edda, #a7f3d0);
    color: #155724;
    border: 1px solid #a7f3d0;
}

.status-completed {
    background: linear-gradient(135deg, #d1ecf1, #a7d8e7);
    color: #0c5460;
    border: 1px solid #a7d8e7;
}

.status-overdue {
    background: linear-gradient(135deg, #f8d7da, #fca5a5);
    color: #721c24;
    border: 1px solid #fca5a5;
}

/* === PAYMENT STATUS === */
.payment-status {
    font-weight: 600;
}

.payment-fully-paid {
    color: #155724;
}

.payment-balance {
    color: #e74c3c;
}

