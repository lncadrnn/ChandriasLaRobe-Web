@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

* {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --body-color: #e4e9f7;
    --sidebar-color: #fff;
    --primary-color: hsl(346, 100%, 74%);
    --primary-color-light: #f6f5ff;
    --toggle-color: #dddd;
    --text-color: #808080;
    --secondary-color: hsl(346, 85%, 90%);
    --secondary-text-color: hsl(346, 100%, 74%);


    /* Set transitions to none */
    --tran-02: none; /* all 0.2s ease; */
    --tran-03: none; /* all 0.3s ease; */
    --tran-04: none; /* all 0.4s ease; */
    --tran-05: none; /* all 0.5s ease; */
}

body {
    height: 100vh;
    background: var(--body-color);
    /* transition: var(--tran-05); */ /* Removed transition */
    overflow: hidden;
}

/*=============== CURSOR POINTER STYLES ===============*/
/* All buttons and interactive elements */
button,
.btn,
.filter-btn,
.search-btn,
.export-btn,
.print-btn,
.refresh-btn,
.edit-btn,
.delete-btn,
.view-btn,
.pagination-btn,
.sort-btn,
input[type="submit"],
input[type="button"] {
  cursor: pointer;
}

/* All links with href */
a[href] {
  cursor: pointer;
}

/* Customer logs specific interactive elements */
.log-item,
.customer-row,
.rental-history-item,
.table-row,
.table-header,
.date-filter,
.status-filter,
.customer-filter,
.action-menu,
.dropdown-toggle,
.modal-trigger,
.tab-button,
select,
.checkbox-wrapper,
.expandable-row {
  cursor: pointer;
}

/* Disabled elements */
button:disabled,
.btn:disabled,
input:disabled,
select:disabled {
  cursor: not-allowed !important;
}

/* === PAGE NAME SECTION === */
.page-name {
    height: 100vh;
    left: 260px;
    position: relative;
    background: white;
    padding: 2rem;
    transition: var(--tran-05);
    overflow: hidden; /* Remove scrollbar from main content */
    display: flex;
    flex-direction: column;
}

.sidebar.close ~ .page-name {
    left: 78px;
}

.page-name .text {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 2rem;
    position: relative;
}

.page-name .text::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 80px;
    height: 3px;
    background: var(--primary-color);
    border-radius: 2px;
}

/* === TABLE STYLES === */
.table-wrapper {
    overflow-x: auto;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(255, 105, 180, 0.1);
    border: 1px solid var(--secondary-color);
}

.table-wrapper::-webkit-scrollbar {
    height: 8px;
}

.table-wrapper::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 0 0 16px 16px;
}

.table-wrapper::-webkit-scrollbar-thumb {
    background: var(--primary-color);
    border-radius: 4px;
}

.table-wrapper::-webkit-scrollbar-thumb:hover {
    background: var(--secondary-color);
}

#rental-history-table {
    width: 100%;
    min-width: 1400px; /* Increased minimum width */
    border-collapse: collapse;
    font-size: 0.9rem;
    background: white;
    border-radius: 16px;
    overflow: hidden;
}

/* Make specific columns wider */
#rental-history-table th:nth-child(3), /* Products Rented */
#rental-history-table td:nth-child(3) {
    min-width: 300px;
    width: 300px;
}

#rental-history-table th:nth-child(4), /* Additional Items */
#rental-history-table td:nth-child(4) {
    min-width: 250px;
    width: 250px;
}   border-collapse: collapse;
